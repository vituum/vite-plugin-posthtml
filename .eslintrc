{
  "extends": "standard",
  "rules": {
    "indent": ["error", 4],
    "no-new": "off",
    "space-before-function-paren": ["error", "never"],
    "import/extensions": ["error", "ignorePackages"],
    "multiline-ternary": ["error", "never"]
  },
  "env": {
    "browser": true
  },
  "ignorePatterns": ["src", "public"]
}
